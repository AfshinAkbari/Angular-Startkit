{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "angular-project": [
        "projects/angular-project"
      ],
      "angular-project/*": [
        "projects/angular-project/*"
      ],
      "core-js/es7/reflect": [
        "node_modules/core-js/proposals/reflect-metadata"
      ],
      "core-js/es6/*": [
        "node_modules/core-js/es/*"
      ],
      "pdn-security": [
        "projects/pdn-security/src/public-api"
      ],
      "pdn-security/*": [
        "projects/pdn-security/src/*"
      ],
      "pdn-core": [
        "projects/pdn-core/src/public-api"

      ],
      "pdn-core/*": [
        "projects/pdn-core/src/*"
      ]
    }
  }
}
